<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.github.yahia_hassan.bakingapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MasterListActivity"
            android:label="@string/recipe_steps"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".DetailsActivity"
            android:label="@string/step_details"
            android:launchMode="singleTop"
            android:parentActivityName=".MasterListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MasterListActivity" />
        </activity>

        <receiver android:name=".Widget.RecipeIngredientWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/recipe_ingredient_widget_info" />
        </receiver>

        <service android:name=".Widget.WidgetService"
        android:permission="android.permission.BIND_REMOTEVIEWS" />
    </application>

</manifest>